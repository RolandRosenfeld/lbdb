m_goobook_query()
{
    GOOBOOK=@GOOBOOK@

    if [ -x "$GOOBOOK" ]		# check whether goobook in installed
    then
        $GOOBOOK query "$@" \
            | sed -e '1d;s/\([^	]*	[^	]*\).*/\1	goobook/'
    fi
}
