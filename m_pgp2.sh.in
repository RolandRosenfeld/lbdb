m_pgp2_query()
{
    PGP=@PGP@
    
    if [ -x "$PGP" ]
    then
	$PGP +language=en -kv "$@" 2>/dev/null \
	| grep -a '^[^<>]\{32,\} <[^<>@:/ ]*@[^<>@ ]*>[^<>@]*$' \
	| sed -e 's/^.\{30,30\}\(.*\) <\([^:]*\)>.*$/\2	\1	(PGP2)/' \
	| sed -e 's/	\([^	]\{47,47\}\)[^	]*	/	\1...	/'
    fi
}
