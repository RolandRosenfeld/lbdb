prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@

m_ldap_query ()
{
    if [ "$LDAP_NICKS" != "" ]
    then
	for NICK in $LDAP_NICKS
	do
	    $bindir/mutt_ldap_query --lbdb_output --nickname=$NICK "$@" || :
	done
    else
	$bindir/mutt_ldap_query --lbdb_output "$@" || :
    fi
}
