umask 077

dotlock=@DOTLOCK@
prefix=@prefix@
exec_prefix=@exec_prefix@
fetchaddr=@libdir@/fetchaddr
db=$HOME/.lbdb/m_inmail

if ! $dotlock -r 10 -f $db ; then
  echo "Can't lock $db [dotlock returned $rv]." >&2
  exit 1
fi

if $fetchaddr >> $db ; then
  @libdir@/munge < $db > $db.$$.tmp
  mv -f $db.$$.tmp $db
fi

$dotlock -u $db
