m_pgp5_query()
{
    PGPK=@PGPK@

    if [ -x "$PGPK" ]
    then
	$PGPK +language=en -l "$@" 2>/dev/null \
	| grep -a '^uid  ...* <[^<>@:/ ]*@[^<>@ ]*>[^<>@]*$' \
	| sed -e 's/^uid  \(.*\) <\(.*\)>.*$/\2	\1	(PGP5)/' \
	| sed -e 's/	\([^	]\{47,47\}\)[^	]*	/	\1...	/' \
	| grep -ia "$@" || :
    fi
}
