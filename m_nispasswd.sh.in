m_nispasswd_query()
{
    NISCAT=@NISCAT@

    if [ -x "$NISCAT" ]	#check for niscat
    then
	f_user="$(echo \"$@\" | sed -e 's/@.*//')"
	HOST="$(lbdb_hostname)"

	$NISCAT passwd.org_dir \
	| grep -ia "$f_user" \
	| sed -e "s/^\([^:]*\):[^:]*:\([^:]*\):[^:]*:\([^:,]*\)[,:].*\$/\1@$HOST	\3	UID \2/"
    fi
}
