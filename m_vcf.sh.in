m_vcf_query()
{
  VCQ=@libdir@/vcquery

  QUERY="$1"

  for file in ${OVERRIDE_VCF_FILES:-$VCF_FILES}
  do
    if test -r $file.cache -a $file.cache -nt $file
    then
      cmd="cat $file.cache"
    else
      if $VCQ $file > $file.cache
      then
        cmd="cat $file.cache"
      else
        cmd="$VCQ $file"
      fi
    fi

    $cmd | grep -ie "$QUERY" | awk '
      BEGIN { FS = OFS = "\t" }
      $2 == "(null)" { $2 = " " }
      { NF = 2; $3 = "(VCF)"; print }'
  done
}
