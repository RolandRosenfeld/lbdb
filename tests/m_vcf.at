AT_CHECK([sed 's/$/\r/' < $abs_srcdir/data/example.vcf > example.vcf])
AT_CHECK([env LBDB_OVERRIDE_METHODS=m_vcf \
              OVERRIDE_VCF_FILES=example.vcf \
          lbdbq muster], [], [expout])
