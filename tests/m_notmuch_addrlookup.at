AT_BANNER([Test m_notmuch_addrlookup])

AT_SETUP(m_notmuch_addrlookup)
AT_SKIP_IF([! which notmuch-addrlookup])
AT_SKIP_IF([! which notmuch])
AT_CHECK([perl $abs_srcdir/gen-maildir $abs_srcdir/data
          echo "[[database]]" > notmuch.config
          echo "path=$(pwd)/maildir" >> notmuch.config
          echo "[[user]]" >> notmuch.config
          echo "primary_email=me@example.org" >> notmuch.config
          env NOTMUCH_CONFIG=notmuch.config notmuch new > /dev/null
          cat $abs_srcdir/data/m_notmuch_addrlookup.expected > expout
          env LBDB_OVERRIDE_METHODS=m_notmuch_addrlookup \
              NOTMUCH_CONFIG=notmuch.config \
          lbdbq example], [], [expout])
AT_CLEANUP
